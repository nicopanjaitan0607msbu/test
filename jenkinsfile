def name = "local"

podTemplate(
    label: fullname,
    inheritFrom: 'ubuntu-agent-pod',
    containers: [
        containerTemplate(name: 'ubuntu', image: 'ubuntu:latest', command: 'cat', ttyEnabled: true)
    ]
) {
    node(fullname) {
            stage('Test'){
              container('ubuntu') {
              sh "echo 'ini jenkins pod template'"
          }
      }
}
}
